<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="client_1" author="Chechkin Konstantin">
        <createTable tableName="legal_type" schemaName="bank">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <createTable tableName="client" schemaName="bank">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="short_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="legal_type_id" type="int">
                <constraints nullable="false" unique="false" foreignKeyName="fk_legal_type" references="bank.legal_type(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>